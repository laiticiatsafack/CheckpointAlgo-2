PROCEDURE produitSclaire(t1,t2, VAR resultat)
VAR

    
BEGIN
     FOR i FROM 1 TO 2 STEP name : type := value;
        resultat = resultat + t1[i] * t2[i]
    END_FOR
END

ALGORITHM Checkpoint
VAR
    V1 : ARRAY_OF INTEGER[] : = [5,3];
    V2 : ARRAY_OF INTEGER[] : = [1,2];
    jordan : INTEGER
    
BEGIN
    produitSclaire(v1,v2,jordan)

    IF (jordan = 0) THEN
        Write("perpendiculaire")

    ELSE
        Write("Non perpendiculaire")
    END_IF
END    